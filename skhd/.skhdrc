# switch display
alt + cmd - return : yabai -m display --focus recent 
shift + ctrl - p : yabai -m display --focus prev
shift + ctrl - n : yabai -m display --focus next

# switch focus
alt - j : yabai -m window --focus next || yabai -m window --focus first 
alt - k : yabai -m window --focus prev || yabai -m window --focus last
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# shortcuts for switching between spaces are in system preferences

# swap windows
shift + cmd - h : yabai -m window --swap west
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east

# warp windows
shift + alt - h : yabai -m window --warp west || yabai -m window --move rel:-25:0
shift + alt - j : yabai -m window --warp south || yabai -m window --move rel:0:25
shift + alt - k : yabai -m window --warp north || yabai -m window --move rel:0:-25
shift + alt - l : yabai -m window --warp east || yabai -m window --move rel:25:0

# move windows
shift + ctrl + alt - h : yabai -m window --space prev
shift + ctrl + alt - l : yabai -m window --space next

# resize windows
lctrl + alt - h : \
    abai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

lctrl + alt - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

lctrl + alt - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

lctrl + alt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

lctrl + alt - 0 : yabai -m space --balance

# 4 corners
shift + alt - f : yabai -m window --grid 2:2:0:0:1:1
shift + alt - v : yabai -m window --grid 2:2:0:1:1:1
shift + alt - g : yabai -m window --grid 2:2:1:0:1:1
shift + alt - b : yabai -m window --grid 2:2:1:2:1:1

# misc.
shift + alt - i : yabai -m window --toggle float
shift + alt - c : yabai -m window --grid 5:5:1:1:3:3
shift + alt - e : yabai -m window --toggle split
alt - p : yabai -m window --toggle zoom-parent
alt - f : yabai -m window --toggle zoom-fullscreen

# app binds
:: app @ 
cmd - return ; app
app < escape ; default
app < t : open /Applications/iTerm.app; skhd -k "escape"
app < s : open /Applications/Safari.app; skhd -k "escape"
app < m : open /System/Applications/Messages.app; skhd -k "escape"
app < d : open /Applications/Discord.app; skhd -k "escape"
app < c : open "/Applications/Visual Studio Code.app/"; skhd -k "escape"
app < z : open /Applications/zoom.us.app; skhd -k "escape"
app < p : open /System/Applications/Preview.app; skhd -k "escape"
app < f : open /Applications/Firefox.app; skhd -k "escape"
app < w : open /Applications/WhatsApp.app; skhd -k "escape"
app < n : open /Applications/Notion.app; skhd -k "escape"
app < b : open /Applications/Obsidian.app; skhd -k "escape"

# -- hypermode app binds -- #
app < shift - m : open /System/Applications/Messenger.app; skhd -k "escape"
app < shift - t : open /Applications/Todoist.app; skhd -k "escape"
app < shift - c : open -a Safari https://calendar.google.com; skhd -k "escape"
app < shift - n : open /System/Applications/Notes.app; skhd -k "escape"
app < shift - s : open /Applications/Spotify.app; skhd -k "escape"
app < shift - b : open /System/Applications/Books.app; skhd -k "escape"

# -- "O"ffice / work mode -- #
:: office @
app < o ; office  
office < escape; default
office < w : open "/Applications/Microsoft Word.app"; skhd -k "escape"
office < e : open "/Applications/Microsoft Excel.app"; skhd -k "escape"
office < o : open -a Safari https://outlook.office.com; skhd -k "escape"

# skhd bypass
:: bypass @
shift + alt + cmd - return; bypass
bypass < shift + alt + cmd - return; default
bypass < escape; default
